<%= turbo_frame_tag dom_id(tweet) do %>
  <div class="border-[1px] border-gray-400 p-4 my-3" >
    <p>
      <strong>Body:</strong>
      <%= tweet.body %>
    </p>

    <div class="flex gap-4">
      <%= button_to "Likes (#{tweet.likes.present? ? tweet.likes : 0})", tweet_like_path(tweet), method: :post %>
      <%= button_to "Retweet(#{tweet.retweets.present? ? tweet.retweets : 0})", tweet_retweet_path(tweet), method: :post %>
      <%= button_to "Delete", tweet_path(tweet), method: :delete %>
    </div>
      <%= link_to "Edit", edit_tweet_path(tweet) %>
  </div>
<%end%>
